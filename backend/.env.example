# FastAPI Environment Configuration Example
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/therapy_chat

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Audio Settings
MAX_AUDIO_FILE_SIZE=10485760
AUDIO_UPLOAD_DIR=uploads/audio

# Therapy Settings
MAX_SESSION_MESSAGES=1000
DEFAULT_THERAPIST_PERSONALITY=warm

# Server Settings
HOST=0.0.0.0
PORT=8000